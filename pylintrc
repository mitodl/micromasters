[MASTER]
ignore=migrations,.git
load-plugins = pylint_django
django-settings-module=micromasters.settings

[BASIC]
# Allow django's urlpatterns, and our log preference
const-rgx = (([A-Z_][A-Z0-9_]*)|(__.*__)|log|urlpatterns)$
# Don't require docstrings for double-underscore methods, or for unittest support methods
no-docstring-rgx = __.*__$|setUp$|setUpClass$|tearDown$|tearDownClass$|Meta$|Params$

[TYPECHECK]
generated-members =
    status_code
ignored-classes=
	six,
	six.moves,
ignored-modules=
	six,
	six.moves,

[MESSAGES CONTROL]
# Removed outdated options: old-style-class (removed), no-init (removed), no-self-use (moved to extension), bad-continuation (removed)
disable = no-member, too-few-public-methods, abstract-method, invalid-name, too-many-ancestors, line-too-long, len-as-condition, no-else-return, unpacking-non-sequence, not-an-iterable, unsupported-membership-test, cyclic-import, duplicate-code, raise-missing-from, import-outside-toplevel, too-many-positional-arguments, too-many-locals, consider-using-f-string
